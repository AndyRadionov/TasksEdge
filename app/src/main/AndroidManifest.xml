<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.andyradionov.tasksedge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="io.github.andyradionov.tasksedge.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.andyradionov.tasksedge.SettingsActivity"
            android:parentActivityName="io.github.andyradionov.tasksedge.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.andyradionov.tasksedge.MainActivity" />
        </activity>
        <activity android:name="io.github.andyradionov.tasksedge.TaskActivity"
            android:parentActivityName="io.github.andyradionov.tasksedge.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.github.andyradionov.tasksedge.MainActivity" />
        </activity>
    </application>

</manifest>